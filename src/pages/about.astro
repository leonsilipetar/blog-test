---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About me";
const identity = {
    firstName: "Leon",
    country: "Croatia",
    occupation: "computer science student",
    hobbies: ["playing piano", "web development"],
};

const skills:string[] = ["HTML", "CSS", "JavaScript", "React", "Astro"];
const happy:boolean = true;
const finished:boolean = false;
const goal = 3;

const skillColor:string = "crimson";
const fontWeight ="bold";
const textCase = "lowercase"

---

<BaseLayout pageTitle={pageTitle}>
    <style is:global define:vars={{skillColor, fontWeight, textCase}}>
        h1 {
            color: purple;
            font-size: 4rem;
        }
        .skill {
            color: var(--skillColor);
            font-weight: var(--fontWeight);
            text-transform: var(--textCase);
        }
    </style>
    <p>This is just the beginning of something great... </p>
    <p>So.. here are some facts about me:</p>
    <ul>
        <li>My name is: {identity.firstName}</li>
        <li>I live in {identity.country} and my main occupation at the time is {identity.occupation}.</li>
        {identity.hobbies.length >= 2 &&
                <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
        }
    </ul>
    <p>my skills are:</p>
    <ul>
        {skills.map((skill:string)=> <li class="skill">{skill}</li>)}
    </ul>
    {happy && <p>I am happy to be learning Astro!</p>}
    {finished && <p>I finished this tutorial!</p>}
    {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days...</p>}
</BaseLayout>
